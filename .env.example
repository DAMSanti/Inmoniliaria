# ================================================
# VACACIONAL RENTAL PLATFORM - ENVIRONMENT VARIABLES
# ================================================
# Copy this file to .env.local for local development
# Copy this file to .env.production for production

# ================================================
# APPLICATION
# ================================================
NEXT_PUBLIC_APP_NAME="Vacacional Rental Platform"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development
NODE_ENV=development

# ================================================
# DATABASE - PostgreSQL
# ================================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/vacacional_db?schema=public"

# ================================================
# REDIS - Caching & Sessions
# ================================================
REDIS_URL="redis://localhost:6379"

# ================================================
# AUTHENTICATION - NextAuth.js
# ================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"
NEXTAUTH_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# ================================================
# OAUTH PROVIDERS (Optional)
# ================================================
# Google
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# ================================================
# EMAIL - SMTP Configuration
# ================================================
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="Vacacional Rental"

# ================================================
# FILE UPLOAD - UploadThing
# ================================================
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# Alternative: DigitalOcean Spaces
DO_SPACES_KEY=""
DO_SPACES_SECRET=""
DO_SPACES_ENDPOINT="https://ams3.digitaloceanspaces.com"
DO_SPACES_BUCKET="vacacional-uploads"
DO_SPACES_CDN_ENDPOINT="https://vacacional-uploads.ams3.cdn.digitaloceanspaces.com"

# ================================================
# MAPS & GEOLOCATION
# ================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""
NEXT_PUBLIC_MAPBOX_TOKEN=""

# ================================================
# PAYMENT PROCESSING
# ================================================
# Stripe
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# PayPal (Optional)
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_MODE="sandbox"

# ================================================
# ANALYTICS & TRACKING
# ================================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=""
NEXT_PUBLIC_GTM_ID=""
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=""

# ================================================
# ERROR TRACKING
# ================================================
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# ================================================
# RATE LIMITING
# ================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ================================================
# FEATURE FLAGS
# ================================================
NEXT_PUBLIC_ENABLE_VIRTUAL_TOURS=true
NEXT_PUBLIC_ENABLE_INSTANT_BOOKING=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_BLOG=true

# ================================================
# LOCALIZATION
# ================================================
NEXT_PUBLIC_DEFAULT_LOCALE=es
NEXT_PUBLIC_SUPPORTED_LOCALES=es,en,fr,de,it,pt,nl,pl,ru,sv

# ================================================
# ADMIN CONFIGURATION
# ================================================
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="change-this-password"
